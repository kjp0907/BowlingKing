<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.tacademy.bowlingkingproject.TabPager.totalRanking.ClubRankingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f2f2f2">

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 랭킹"
            android:layout_marginTop="5dp"
            android:textColor="@color/red"
            />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="2"
                android:layout_gravity="center"

                android:id="@+id/myclubranking"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위"
                android:layout_gravity="center"

                android:textSize="17dp"
                />

            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"

                android:background="@drawable/ic_profile"
                />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/myclubname"
                android:text="갓갓당"
                android:layout_gravity="center"
                android:textSize="17dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/myclubscore"
                android:text="128"
                android:layout_gravity="center"

                android:textColor="@color/red"
                android:textSize="17dp" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점"
                android:layout_gravity="center"

                android:textColor="@color/red"
                android:textSize="17dp"
               />
        </LinearLayout>











        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f2f2f2">

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 랭킹"
            android:layout_marginTop="5dp"
            android:textColor="@color/red"
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/club_total_listview"
            />
    </LinearLayout>



</FrameLayout>