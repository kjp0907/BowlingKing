<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tacademy.bowlingkingproject.TabPager.Message.NewPostActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:orientation="vertical"
    >


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="내용을 입력하세요"
        android:id="@+id/content" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ea3d41"
        android:textColor="#ffffff"
        android:text="게시물 등록하기"
        android:id="@+id/write_complete"
        android:onClick="WriteComplete"
        />


</LinearLayout>


</LinearLayout>
